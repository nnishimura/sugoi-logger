{
  "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "lib",
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "declarationDir": "lib/types",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
  },
  "include": [
      "src/**/*"
  ]
}